        },
        {
            "type": "color",
            "id": "button_bgcolor",
            "label": "Background Color",
            "default": "#0c0c0c"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Subscribe"
        },
        {
            "type": "color",
            "id": "button_textcolor",
            "label": "Text Color",
            "default": "#ffffff"
        },
        {
            "type":"header",
            "content": "Social Media Option"
        },
        {
            "type": "text",
            "id": "social_media_title",
            "label": "Social Media Title",
            "default": "Our Social"
        },
        {
            "type": "checkbox",
            "id": "show_social_icons",
            "label": "Show Social Icons",
            "default": true
        },
        {
            "type": "url",
