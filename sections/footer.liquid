            "label": "Facebook URL"
        },
        {
            "type": "url",
            "id": "instagram_link",
            "label": "Instagram URL"
        },
        {
            "type": "url",
            "id": "tiktok_link",
            "label": "TikTok URL"
        },
        {
            "type": "url",
            "id": "linkedin_link",
            "label": "LinkedIn URL"
        }
  ],
  "presets": [
    {
      "name": "Footer Newsletter + Social",
      "category": "Footer"
    }
  ]
}
