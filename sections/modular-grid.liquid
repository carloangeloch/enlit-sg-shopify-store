                    "type": "header",
                    "content": "Column Details"
                },
                {
                    "type": "text",
                    "id": "column_caption",
                    "label": "Column Caption",
                    "default": "caption"
                },
                {
                    "type": "text",
                    "id": "column_title",
                    "label": "Column Title",
                    "default": "title"
                },
                {
                    "type": "richtext",
                    "id": "column_content",
                    "label": "Column Content",
                    "default": "<p></p>"
                },
                {
                    "type":"color",
                    "id": "column_text_color",
                    "label": "Column Text Color",
                    "default": "#c9c9c9"
                },
                {
                    "type": "text",
                    "id": "column_button_text",
                    "label": "Column Button Text"
