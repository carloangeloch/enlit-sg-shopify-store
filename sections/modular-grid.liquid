                "default": "medium",
                "options": [
                    {
                    "value": "auto",
                    "label": "Adapt to image height"
                    },
                    {
                    "value": "large",
                    "label": "Large"
                    },
                    {
                    "value": "medium",
                    "label": "Medium"
                    },
                    {
                    "value": "small",
                    "label": "Small"
