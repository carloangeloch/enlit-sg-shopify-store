            "min": 0,
            "max": 100,
            "step": 1
        }
    ],
    "blocks": [
        {
            "type": "column",
            "name": "Column",
            "settings": [
                {
                    "type":"image_picker",
                    "id": "column_image",
                    "label": "Column Image"
                },
                {
                "type": "select",
