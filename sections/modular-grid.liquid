{{ 'base.css' | asset_url | stylesheet_tag }}

{% assign cont_width = '' %}
{% assign column_width = '' %}
{% case section.settings.section_width %}
  {% when 'xlarge' %}
    {% assign cont_width = '1240px' %}
    {% assign column_width = 'calc(1240px / ' | append: section.settings.columns | append: ')' %}
  {% when 'large' %}
    {% assign cont_width = '1024px' %}
    {% assign column_width = 'calc(1024px / ' | append: section.settings.columns | append: ')' %}
  {% when 'medium' %}
    {% assign cont_width = '768px' %}
    {% assign column_width = 'calc(768px / ' | append: section.settings.columns | append: ')' %}
  {% when 'small' %}
    {% assign cont_width = '640px' %}
    {% assign column_width = 'calc(640px / ' | append: section.settings.columns | append: ')' %}
  {% else %}
    {% assign column_width = 'calc(100% / ' | append: section.settings.columns | append: ')' %}
    {% assign cont_width = '100%' %}
{% endcase %}

{% assign content_align = 'left'%}
{% case section.settings.content_alignment %}
  {% when 'center' %}
    {% assign content_align = 'center' %}
  {% when 'end' %}
    {% assign content_align = 'right' %}
  {% else %}
    {% assign content_align = 'left' %}
{% endcase %}


<section id="modular-grid">
    <div id="section-container" class="p-2 lg:p-4" style="margin-top: {{ section.settings.margin_top | append:'px' }}; margin-bottom: {{ section.settings.margin_bottom | append: 'px'}};">
        {% if section.settings.title != blank %}
            {% render 'section-title',
                title: {{ section.settings.title }}
            %}
        {% endif %}
        {% comment %} Desktop Version {% endcomment %}
        <div class="hidden lg:flex flex-wrap flex-row mx-auto" style="width:{{ cont_width }}; justify-content: {{ section.settings.column_position}};align-items: {{ section.settings.column_alignment }};">
            {% for block in section.blocks %}
                <div class="p-4" style="width:{{ column_width }}; height:{{ column_width }};">
                    <div class="p-4 flex flex-col justify-end w-full h-full border-0 hover:border-3 border-slate-100 duration-150 ease-in-out"
                        style="background-image: url({{ block.settings.column_image | image_url: width: 300 }});
                        background-size: cover; background-position: center; align-items:{{ section.settings.content_alignment }};
                        color: {{ block.settings.column_text_color }};"
                    >
                        {% if block.settings.column_caption != blank %}
                            <div id="column-title">
                                <span class="text-[0.75rem] opacity-70">
                                    {{ block.settings.column_caption }}
                                </span>
                            </div>
                        {% endif %}
                        {% if block.settings.column_title != blank %}
                            <div id="column-title">
                                <h2 class="text-xl">
                                    {{ block.settings.column_title }}
                                </h2>
                            </div>
                        {% endif %}
                        
                        {% if block.settings.column_content != blank %}
                            <div id="column-content" class="opacity-70 mb-1" style="text-align: {{ content_align }};">
                                {{ block.settings.column_content }}
                            </div>
                        {% endif %}
    
                        
                        {% assign bg_opacity = block.settings.background_opacity | divided_by: 100.0 %}

                        {% if block.settings.column_button_text != blank %}
                            <div id="column-btn" class="pt-4 flex gap-4 items-center justify-start">
                                <a class="group py-2 px-8 inline-block transition-all duration-300 hover:opacity-80"
                                    href="{{ block.settings.column_button_link }}"
                                    style="border: {% if block.settings.has_border %} solid {% else %} none {% endif %} 1px;
                                            border-color: {{ block.settings.button_border_color }};
                                            color: {{ block.settings.button_text_color }};
                                            background-color: {{ block.settings.button_bgcolor | color_modify: 'alpha', bg_opacity }};">
                                    <span class="button-span inline-block transform transition-all duration-150">
                                        {{ block.settings.column_button_text }}
                                    </span>
                                </a>

                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>

        
        {% comment %} Mobile Version {% endcomment %}
        <div class="flex lg:hidden flex-col mx-auto w-full" style="justify-content: {{ section.settings.column_position}};align-items: {{ section.settings.column_alignment }};">
            {% for block in section.blocks %}
                <div class="p-4 w-[360px] h-[360px] mx-auto">
                    <div class="p-4 flex flex-col justify-end w-full h-full border-0 hover:border-3 border-slate-100 duration-150 ease-in-out"
                        style="background-image: url({{ block.settings.column_image | image_url: width: 300 }});
                        background-size: cover; background-position: center; align-items:{{ section.settings.content_alignment }};
                        color: {{ block.settings.column_text_color }};"
                    >
                        {% if block.settings.column_caption != blank %}
                            <div id="column-title">
                                <span class="text-[0.75rem] opacity-70">
                                    {{ block.settings.column_caption }}
                                </span>
                            </div>
                        {% endif %}
                        {% if block.settings.column_title != blank %}
                            <div id="column-title">
                                <h2 class="text-xl">
                                    {{ block.settings.column_title }}
                                </h2>
                            </div>
                        {% endif %}
                        
                        {% if block.settings.column_content != blank %}
                            <div id="column-content" class="opacity-70 mb-1" style="text-align: {{ content_align }};">
                                {{ block.settings.column_content }}
                            </div>
                        {% endif %}
    
                        
                        {% assign bg_opacity = block.settings.background_opacity | divided_by: 100.0 %}

                        {% if block.settings.column_button_text != blank %}
                            <div id="column-btn" class="pt-4 flex gap-4 items-center justify-start">
                                <a class="group py-2 px-8 inline-block transition-all duration-300 hover:opacity-80"
                                    href="{{ block.settings.column_button_link }}"
                                    style="border: {% if block.settings.has_border %} solid {% else %} none {% endif %} 1px;
                                            border-color: {{ block.settings.button_border_color }};
                                            color: {{ block.settings.button_text_color }};
                                            background-color: {{ block.settings.button_bgcolor | color_modify: 'alpha', bg_opacity }};">
                                    <span class="button-span inline-block transform transition-all duration-150">
                                        {{ block.settings.column_button_text }}
                                    </span>
                                </a>

                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>


